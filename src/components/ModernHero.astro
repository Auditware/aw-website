---
export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  primaryCta: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
  imageUrl?: string;
  imageAlt?: string;
  badges?: Array<{
    text: string;
    href?: string;
    icon?: string;
  }>;
}

const { 
  title, 
  subtitle, 
  description, 
  primaryCta, 
  secondaryCta, 
  imageUrl, 
  imageAlt = '', 
  badges = [] 
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-grid">
        <div class="hero-text">
          {subtitle && (
            <div class="hero-subtitle-badge">
              <span class="badge">{subtitle}</span>
            </div>
          )}
          
          <h1 class="hero-title">
            <span set:html={title} />
          </h1>
          
          <p class="hero-description body-large">
            {description}
          </p>
          
          {badges.length > 0 && (
            <div class="hero-badges">
              {badges.map((badge) => (
                <div class="framework-badge">
                  {badge.icon && (
                    <img src={badge.icon} alt="" class="framework-badge-icon" />
                  )}
                  <div class="framework-badge-content">
                    <div class="framework-badge-title">{badge.text}</div>
                    {badge.href && (
                      <a href={badge.href} class="framework-badge-description body-small">
                        Learn more â†’
                      </a>
                    )}
                  </div>
                </div>
              ))}
            </div>
          )}
          
          <div class="hero-cta">
            <a href={primaryCta.href} class="btn btn-primary btn-lg">
              {primaryCta.text}
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            {secondaryCta && (
              <a href={secondaryCta.href} class="btn btn-secondary btn-lg">
                {secondaryCta.text}
              </a>
            )}
          </div>
        </div>
        
        {imageUrl && (
          <div class="hero-visual">
            <div class="hero-image-container">
              <img 
                src={imageUrl} 
                alt={imageAlt}
                class="hero-image animate-float"
                loading="eager"
              />
              <div class="hero-image-glow"></div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
  
  <!-- Background Elements -->
  <div class="hero-bg-elements">
    <div class="hero-gradient-1"></div>
    <div class="hero-gradient-2"></div>
    <div class="hero-grid-pattern"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: var(--color-background-primary);
    overflow: hidden;
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }
  
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: center;
    min-height: 80vh;
  }
  
  .hero-text {
    max-width: 600px;
  }
  
  .hero-subtitle-badge {
    margin-bottom: var(--spacing-6);
  }
  
  .hero-title {
    font-size: var(--font-size-7xl);
    font-weight: var(--font-weight-black);
    line-height: var(--line-height-none);
    margin-bottom: var(--spacing-6);
    background: linear-gradient(135deg, var(--color-text-primary) 0%, var(--color-primary-300) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: var(--letter-spacing-tight);
  }
  
  .hero-description {
    margin-bottom: var(--spacing-8);
    max-width: 500px;
  }
  
  .hero-badges {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-10);
  }
  
  .hero-cta {
    display: flex;
    gap: var(--spacing-4);
    flex-wrap: wrap;
  }
  
  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .hero-image-container {
    position: relative;
    max-width: 600px;
    width: 100%;
  }
  
  .hero-image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
    border: 1px solid var(--color-border-primary);
  }
  
  .hero-image-glow {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    background: var(--gradient-primary);
    border-radius: var(--radius-2xl);
    opacity: 0.2;
    filter: blur(40px);
    z-index: -1;
  }
  
  /* Background Elements */
  .hero-bg-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }
  
  .hero-gradient-1 {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 80%;
    height: 120%;
    background: radial-gradient(ellipse, rgba(79, 99, 255, 0.15) 0%, transparent 50%);
    transform: rotate(15deg);
  }
  
  .hero-gradient-2 {
    position: absolute;
    bottom: -30%;
    left: -20%;
    width: 60%;
    height: 80%;
    background: radial-gradient(ellipse, rgba(79, 99, 255, 0.1) 0%, transparent 50%);
    transform: rotate(-15deg);
  }
  
  .hero-grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 1px 1px, rgba(255,255,255,0.03) 1px, transparent 0);
    background-size: 50px 50px;
    opacity: 0.5;
  }
  
  /* Responsive Design */
  @media (max-width: 1199px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-12);
      text-align: center;
    }
    
    .hero-text {
      max-width: none;
    }
    
    .hero-title {
      font-size: var(--font-size-6xl);
    }
  }
  
  @media (max-width: 767px) {
    .hero {
      min-height: 90vh;
    }
    
    .hero-grid {
      gap: var(--spacing-8);
      min-height: 70vh;
    }
    
    .hero-title {
      font-size: var(--font-size-5xl);
    }
    
    .hero-badges {
      align-items: center;
    }
    
    .hero-cta {
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }
    
    .hero-cta .btn {
      width: 100%;
      max-width: 300px;
    }
  }
  
  @media (max-width: 479px) {
    .hero-title {
      font-size: var(--font-size-4xl);
    }
    
    .hero-badges {
      gap: var(--spacing-3);
    }
    
    .framework-badge {
      padding: var(--spacing-3) var(--spacing-4);
    }
  }
</style>
