---
export interface Props {
  title?: string;
  frameworks?: Array<{
    name: string;
    logo: string;
    logoAlt: string;
    description: string;
    linkText?: string;
    linkHref?: string;
  }>;
}

const { 
  title = "Built on Industry Standards",
  frameworks = [
    {
      name: "W3OS Framework",
      logo: "/images/W3OS-Graphic.png",
      logoAlt: "W3OS Logo",
      description: "W3OS compliance demonstrates security maturity. W3OS is the Web3 Operational Security Standard. Our audits align with W3OS guidelines for key management and access controls.",
      linkText: "View Framework →",
      linkHref: "https://github.com/W3OSC/web3-opsec-standard"
    },
    {
      name: "SEAL Certification",
      logo: "/images/framework-logomark-circle-blue.svg",
      logoAlt: "SEAL Logo",
      description: "SEAL provides consistent evaluation criteria. SEAL is a systematic security assessment framework. We apply SEAL methodology to structure security evaluations.",
      linkText: "View Framework →",
      linkHref: "https://frameworks.securityalliance.org/"
    }
  ]
} = Astro.props;
---

<section class="frameworks-section section-sm">
  <div class="container">
    <div class="frameworks-content text-center">
      <h2 class="h3 frameworks-title">{title}</h2>
      <div class="frameworks-grid">
        {frameworks.map((framework) => (
          <div class="framework-card">
            <div class="framework-header">
              <div class={`framework-logo ${framework.name.toLowerCase().includes('w3os') ? 'framework-logo--w3os' : 'framework-logo--seal'}`}>
                <img 
                  src={framework.logo} 
                  alt={framework.logoAlt} 
                  class="framework-logo-img" 
                />
              </div>
              <h3 class="h5">{framework.name}</h3>
            </div>
            <div class="framework-description">
              {(() => {
                const sentences = framework.description.split(/\.\s+/).filter(s => s.trim()).slice(0, 3);
                const result = [];
                sentences.forEach((sentence, index) => {
                  result.push(
                    <p class={`body-base framework-sentence ${index === 0 ? 'framework-sentence--lead' : 'framework-sentence--support'}`}>
                      {sentence.trim()}{index < sentences.length - 1 || sentence.endsWith('.') ? '' : '.'}
                    </p>
                  );
                  if (index < sentences.length - 1) {
                    result.push(<span class="framework-separator"></span>);
                  }
                });
                return result;
              })()}
            </div>
            {framework.linkHref && (
              <div class="framework-cta-wrapper">
                <a href={framework.linkHref} class="btn btn-ghost btn-sm">
                  {framework.linkText || "View Framework →"}
                </a>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .frameworks-section {
    padding: var(--spacing-16) 0;
    background: transparent;
  }
  
  .frameworks-content {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .frameworks-title {
    margin-bottom: var(--spacing-12);
    color: var(--color-text-primary);
  }
  
  .frameworks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--spacing-8);
    justify-items: center;
    align-items: stretch;
  }
  
  .framework-card {
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-8) var(--spacing-8) var(--spacing-6);
    text-align: center;
    max-width: 500px;
    width: 100%;
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    min-height: 100%;
  }
  
  .framework-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .framework-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: var(--spacing-6);
    min-height: 120px;
    justify-content: flex-start;
  }
  
  .framework-logo {
    width: 64px;
    height: 64px;
    margin-bottom: var(--spacing-5);
    margin-top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .framework-logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }
  
  /* Optically balanced logo scaling */
  .framework-logo--w3os {
    transform: scale(1.45);
  }
  
  .framework-logo--seal {
    transform: scale(1.0);
  }
  
  .framework-header h3 {
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
    font-weight: var(--font-weight-semibold);
  }
  
  .framework-description {
    margin-top: 0;
    margin-bottom: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .framework-sentence {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-2-5);
    max-width: 85%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .framework-sentence--lead {
    font-weight: 600;
    color: var(--color-text-primary);
    opacity: 1;
    margin-bottom: var(--spacing-3);
  }
  
  .framework-sentence--support {
    opacity: 0.75;
    font-weight: var(--font-weight-normal);
  }
  
  .framework-sentence:last-child {
    margin-bottom: 0;
  }
  
  .framework-separator {
    display: block;
    width: 4px;
    height: 4px;
    background: var(--color-border-secondary);
    border-radius: 50%;
    margin: var(--spacing-2) auto;
    opacity: 0.4;
  }
  
  .framework-card p {
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-6);
  }
  
  .framework-cta-wrapper {
    margin-top: auto;
    margin-bottom: 0;
    padding-top: var(--spacing-8);
    padding-bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 44px;
  }
  
  .btn-ghost {
    background: transparent;
    border: 1px solid var(--color-primary-400);
    color: var(--color-primary-400);
    padding: var(--spacing-2-5) var(--spacing-5);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
    transition: all var(--transition-base);
    display: inline-block;
    line-height: var(--line-height-normal);
    min-width: 140px;
    text-align: center;
  }
  
  .btn-ghost:hover {
    background: var(--color-primary-400);
    color: var(--color-background-primary);
  }
  
  @media (max-width: 991px) {
    .frameworks-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin: 0 auto;
    }
  }
  
  @media (max-width: 479px) {
    .framework-card {
      padding: var(--spacing-6);
    }
    
    .framework-logo {
      width: 56px;
      height: 56px;
    }
    
    .frameworks-grid {
      grid-template-columns: 1fr;
      min-width: auto;
    }
  }
</style>
