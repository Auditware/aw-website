---
const { 
  description = "Learn more with a free 30 minute consultation with our team.",
  ctaText = "Book a Call",
  ctaHref = "https://calendly.com/d/cnqr-49f-xdy/auditware-consultation"
} = Astro.props;
---

<div class="hero-wrapper-5">
  <p class="margin-bottom-24px-7">
    {description}
  </p>
</div>

<a href={ctaHref} class="button-3-copy">{ctaText}</a>

<style>
  .hero-wrapper-5 {
    max-width: 600px;
    margin: 0 auto 32px auto;
    text-align: center;
  }

  .margin-bottom-24px-7 {
    color: #a0a0a0;
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .button-3-copy {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: linear-gradient(135deg, #4f63ff 0%, #8c83b2 100%);
    border: none;
    border-radius: 12px;
    padding: 16px 32px;
    font-size: 1.125rem;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .button-3-copy:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(79, 99, 255, 0.4);
  }

  @media (max-width: 767px) {
    .margin-bottom-24px-7 {
      font-size: 1rem;
    }
  }
</style>
