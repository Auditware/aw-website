---
export interface Props {
  title: string;
  subtitle?: string;
  services: Array<{
    id: string;
    name: string;
    description: string;
    features: string[];
    image: string;
    imageAlt: string;
  }>;
}

const { title, subtitle, services } = Astro.props;
---

<section class="service-section section">
  <div class="container">
    <div class="service-header text-center">
      <h2 class="h2">{title}</h2>
      {subtitle && (
        <p class="body-large" style="margin-top: var(--spacing-4); max-width: 600px; margin-left: auto; margin-right: auto;">
          {subtitle}
        </p>
      )}
    </div>
    
    <div class="service-toggle-container">
      <div class="service-toggle" id="service-toggle">
        {services.map((service, index) => (
          <button 
            class={`service-toggle-item ${index === 0 ? 'active' : ''}`}
            data-service={service.id}
          >
            {service.name}
          </button>
        ))}
      </div>
    </div>
    
    <div class="service-content">
      {services.map((service, index) => (
        <div 
          class={`service-panel ${index === 0 ? 'active' : ''}`}
          data-panel={service.id}
        >
          <div class="service-grid">
            <div class="service-info">
              <h3 class="h3 gradient-text">{service.name}</h3>
              <p class="body-large">{service.description}</p>
              <ul class="service-features">
                {service.features.map((feature) => (
                  <li class="service-feature">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M13.5 4.5L6 12L2.5 8.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
            <div class="service-visual">
              <div class="service-image-container">
                <img 
                  src={service.image} 
                  alt={service.imageAlt}
                  class="service-image"
                  loading="lazy"
                />
                <div class="service-image-glow"></div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // Service toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const toggleItems = document.querySelectorAll('.service-toggle-item');
    const panels = document.querySelectorAll('.service-panel');
    
    toggleItems.forEach(item => {
      item.addEventListener('click', function() {
        const serviceId = this.getAttribute('data-service');
        
        // Remove active class from all items and panels
        toggleItems.forEach(toggle => toggle.classList.remove('active'));
        panels.forEach(panel => {
          panel.classList.remove('active');
          panel.style.opacity = '0';
        });
        
        // Add active class to clicked item
        this.classList.add('active');
        
        // Show corresponding panel with fade effect
        const targetPanel = document.querySelector(`[data-panel="${serviceId}"]`);
        if (targetPanel) {
          setTimeout(() => {
            targetPanel.classList.add('active');
            targetPanel.style.opacity = '1';
          }, 150);
        }
      });
    });
  });
</script>

<style>
  .service-section {
    background: var(--color-background-primary);
  }
  
  .service-header {
    margin-bottom: var(--spacing-16);
  }
  
  .service-toggle-container {
    display: flex;
    justify-content: center;
    margin-bottom: var(--spacing-16);
  }
  
  .service-toggle {
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-2);
    display: inline-flex;
    gap: var(--spacing-1);
    backdrop-filter: var(--backdrop-blur-sm);
  }
  
  .service-toggle-item {
    padding: var(--spacing-3) var(--spacing-6);
    border-radius: var(--radius-lg);
    background: transparent;
    color: var(--color-text-tertiary);
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-base);
    cursor: pointer;
    border: none;
    font-size: var(--font-size-sm);
    white-space: nowrap;
  }
  
  .service-toggle-item.active {
    background: var(--gradient-primary);
    color: var(--color-text-primary);
    box-shadow: var(--shadow-sm);
  }
  
  .service-toggle-item:hover:not(.active) {
    background: var(--color-background-glass);
    color: var(--color-text-secondary);
  }
  
  .service-content {
    position: relative;
    min-height: 600px;
  }
  
  .service-panel {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-base);
  }
  
  .service-panel.active {
    opacity: 1;
    visibility: visible;
    position: relative;
  }
  
  .service-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: center;
  }
  
  .service-info {
    max-width: 500px;
  }
  
  .service-info .h3 {
    margin-bottom: var(--spacing-4);
  }
  
  .service-info .body-large {
    margin-bottom: var(--spacing-8);
  }
  
  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }
  
  .service-feature {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    color: var(--color-text-secondary);
  }
  
  .service-feature svg {
    color: var(--color-primary-400);
    flex-shrink: 0;
  }
  
  .service-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .service-image-container {
    position: relative;
    max-width: 500px;
    width: 100%;
  }
  
  .service-image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
    border: 1px solid var(--color-border-primary);
  }
  
  .service-image-glow {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    background: var(--gradient-primary);
    border-radius: var(--radius-2xl);
    opacity: 0.15;
    filter: blur(30px);
    z-index: -1;
  }
  
  /* Responsive Design */
  @media (max-width: 1199px) {
    .service-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-12);
      text-align: center;
    }
    
    .service-info {
      max-width: none;
    }
  }
  
  @media (max-width: 767px) {
    .service-toggle {
      flex-direction: column;
      width: 100%;
      max-width: 400px;
    }
    
    .service-toggle-item {
      text-align: center;
    }
    
    .service-content {
      min-height: 500px;
    }
    
    .service-grid {
      gap: var(--spacing-8);
    }
  }
  
  @media (max-width: 479px) {
    .service-toggle-container {
      padding: 0 var(--spacing-4);
    }
    
    .service-toggle {
      max-width: none;
    }
    
    .service-content {
      min-height: 400px;
    }
  }
</style>
