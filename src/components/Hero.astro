---
export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  imageUrl: string;
  imageAlt?: string;
  badges?: Array<{
    text: string;
    href?: string;
    icon?: string;
  }>;
}

const { title, subtitle, description, imageUrl, imageAlt = '', badges = [] } = Astro.props;
---

<div class="section hero-section">
  <section class="hero-heading-left">
    <div class="container"></div>
    <div class="hero-wrapper">
      <div class="hero-split">
        <h1 class="heading">
          <strong class="bold-text">{title}</strong>
        </h1>
        {badges.length > 0 && (
          <div class="flex-block">
            {subtitle && <p class="subtitle">{subtitle}</p>}
            {badges.map((badge) => (
              badge.href ? (
                <a href={badge.href} class="inline-block">
                  {badge.icon && <img src={badge.icon} loading="lazy" width="Auto" height="45" alt="" />}
                  {badge.text && <p class="subtitle">{badge.text}</p>}
                </a>
              ) : (
                <div class="inline-block">
                  {badge.icon && <img src={badge.icon} loading="lazy" width="40" alt="" class="badge-icon" />}
                  {badge.text && <p class="subtitle">{badge.text}</p>}
                </div>
              )
            ))}
          </div>
        )}
        <p class="margin-bottom-24px">{description}</p>
      </div>
      <div class="hero-split">
        <img 
          src={imageUrl} 
          loading="lazy" 
          width="689" 
          alt={imageAlt}
          class="shadow-two"
        />
      </div>
    </div>
  </section>
</div>

<style>
  .section {
    background-color: #000;
    font-family: var(--font-mono);
    display: block;
  }

  .hero-section {
    background-color: transparent;
    background-image: none;
    background-size: auto;
    overflow: hidden;
  }

  .hero-heading-left {
    background-color: transparent;
    background-image: none;
    background-size: auto;
    border-bottom: 1px solid #e4ebf3;
    margin: auto;
    padding: 80px 40px 90px;
    position: relative;
  }

  .container {
    width: 100%;
    max-width: 1250px;
    height: 100%;
    max-height: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-wrapper {
    object-fit: fill;
    justify-content: space-between;
    align-items: center;
    display: flex;
  }

  .hero-split {
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    max-width: 54%;
    display: flex;
  }

  .heading {
    font-family: var(--font-display);
    font-size: var(--font-size-5xl);
    font-weight: 600;
    margin-top: 20px;
    margin-bottom: 0;
    line-height: 0.9;
  }

  .bold-text {
    font-family: var(--font-mono);
    font-size: var(--font-size-8xl);
    font-weight: 800;
    line-height: 1.2;
  }

  .flex-block {
    width: auto;
    height: auto;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    padding-top: var(--space-5);
    padding-bottom: 0;
  }

  .subtitle {
    max-width: 500px;
    margin-bottom: 0;
    padding-top: 0;
    font-family: var(--font-mono);
    font-size: var(--font-size-xl);
    font-weight: 400;
    position: static;
  }

  .inline-block {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .badge-icon {
    margin-left: auto;
    margin-right: auto;
  }

  .margin-bottom-24px {
    max-width: 400px;
    margin-bottom: 20px;
    padding-top: 10px;
    font-family: var(--font-mono);
    font-size: var(--font-size-lg);
    color: #e7d5ff;
  }

  .shadow-two {
    background-color: #0b0a1f;
    border: 1px solid #2b2b2b;
    border-radius: var(--radius-sm);
    box-shadow: var(--shadow-custom);
  }

  /* Responsive styles */
  @media screen and (min-width: 1440px) {
    .hero-wrapper {
      grid-column-gap: 16px;
      grid-row-gap: 16px;
      grid-template-rows: auto auto;
      grid-template-columns: 1fr 1fr;
      grid-auto-columns: 1fr;
      justify-content: space-between;
      align-items: center;
      display: flex;
    }

    .hero-split {
      flex-flow: column;
      justify-content: center;
      align-items: flex-start;
      position: relative;
    }

    .margin-bottom-24px {
      max-width: 500px;
      font-size: var(--font-size-base);
      position: static;
    }

    .flex-block {
      grid-column-gap: 9px;
      grid-row-gap: 9px;
      flex-flow: row;
      grid-template-rows: auto auto;
      grid-template-columns: 1fr 1fr;
      grid-auto-columns: 1fr;
      justify-content: center;
      align-items: center;
      margin-top: var(--space-5);
      margin-bottom: var(--space-1);
      display: flex;
    }

    .subtitle {
      text-align: left;
      max-width: 500px;
      margin-bottom: 0;
      padding-top: 0;
      font-size: var(--font-size-xl);
      font-weight: 400;
      position: static;
    }
  }

  @media screen and (max-width: 991px) {
    .hero-wrapper {
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      margin-bottom: -40px;
    }

    .hero-split {
      max-width: 100%;
      margin-bottom: 40px;
    }

    .heading {
      text-align: center;
      margin-left: auto;
      margin-right: auto;
    }

    .margin-bottom-24px {
      text-align: center;
      max-width: 450px;
      margin-left: auto;
      margin-right: auto;
    }

    .subtitle {
      text-align: center;
      max-width: 450px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media screen and (max-width: 767px) {
    .hero-heading-left {
      padding: 60px 15px 1px;
    }

    .margin-bottom-24px {
      max-width: 450px;
    }

    .heading {
      font-size: var(--font-size-7xl);
    }

    .subtitle {
      max-width: 450px;
    }
  }

  @media screen and (max-width: 479px) {
    .hero-heading-left {
      padding-top: 40px;
      padding-bottom: 0;
    }

    .hero-split {
      margin-bottom: 30px;
    }

    .margin-bottom-24px {
      max-width: 280px;
      font-size: var(--font-size-lg);
    }

    .heading {
      font-size: var(--font-size-3xl);
    }

    .subtitle {
      max-width: 280px;
      font-size: var(--font-size-lg);
    }
  }
</style>
