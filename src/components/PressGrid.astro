---
const { 
  pressItems = []
} = Astro.props;
---

<div class="press-grid">
  {pressItems.map(item => (
    <div class="press-item">
      <img src={item.src} loading="lazy" width={item.width} alt={item.alt} class="press-logo" />
      <div class="text-block-7">{item.description}</div>
    </div>
  ))}
</div>

<style>
  .press-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 48px;
    padding: 80px 20px;
    max-width: 1200px;
    margin: 0 auto;
    background: #000000;
  }

  .press-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: #111111;
    border: 1px solid #333333;
    border-radius: 16px;
    padding: 32px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .press-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .press-logo {
    max-width: 100%;
    height: auto;
    margin-bottom: 24px;
  }

  .text-block-7 {
    color: #a0a0a0;
    font-size: 1rem;
    line-height: 1.6;
  }

  @media (max-width: 767px) {
    .press-grid {
      grid-template-columns: 1fr;
      gap: 32px;
      padding: 60px 20px;
    }

    .press-item {
      padding: 24px;
    }
  }
</style>
