---
export interface Props {
  logo?: {
    src: string;
    alt: string;
    width?: number;
  };
  tagline?: string;
  sections?: Array<{
    title: string;
    links: Array<{
      text: string;
      href: string;
      external?: boolean;
    }>;
  }>;
}

const { 
  logo = {
    src: "/images/Logo-hi-vis.png",
    alt: "Auditware Logo",
    width: 182
  },
  tagline = "Leading security platform and auditing firm",
  sections = [
    {
      title: "Company",
      links: [
        { text: "About Us", href: "/about" },
        { text: "FAQ", href: "/faq" },
        { text: "Press", href: "/press" },
        { text: "Blog", href: "/blog" }
      ]
    },
    {
      title: "Contact us",
      links: [
        { text: "Discord", href: "https://discord.gg/wefVH8NYbb", external: true },
        { text: "Twitter", href: "https://twitter.com/audit_wizard", external: true },
        { text: "LinkedIn", href: "https://www.linkedin.com/company/auditwareio/", external: true }
      ]
    }
  ]
} = Astro.props;
---

<footer class="footer">
  <div class="container">
    <div class="footer-wrapper">
      <a href="/" class="footer-brand">
        <img 
          src={logo.src} 
          loading="lazy" 
          width={logo.width} 
          alt={logo.alt} 
          class="footer-brand-image" 
        />
      </a>
      <div class="footer-links">
        {sections.map((section) => (
          section.links.map((link) => (
            <a 
              href={link.href} 
              class="footer-link"
              target={link.external ? "_blank" : undefined}
              rel={link.external ? "noopener noreferrer" : undefined}
            >
              {link.text}
            </a>
          ))
        ))}
      </div>
      <div class="footer-copyright">
        Â© {new Date().getFullYear()} Auditware
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: var(--spacing-8) 0;
    background: transparent;
    border-top: 1px solid var(--color-border-primary);
    position: relative;
  }
  
  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary-500), transparent);
    opacity: 0.3;
  }
  
  .footer-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-8);
  }
  
  .footer-brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity var(--transition-base);
  }
  
  .footer-brand:hover {
    opacity: 0.85;
  }
  
  .footer-brand-image {
    height: auto;
    max-width: 140px;
  }
  
  .footer-links {
    display: flex;
    gap: var(--spacing-6);
    align-items: center;
    flex: 1;
    justify-content: center;
  }
  
  .footer-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: all var(--transition-base);
    white-space: nowrap;
  }
  
  .footer-link:hover {
    color: var(--color-primary-400);
  }
  
  .footer-copyright {
    color: var(--color-text-tertiary);
    font-size: var(--font-size-sm);
    white-space: nowrap;
  }
  
  @media (max-width: 991px) {
    .footer {
      padding: var(--spacing-6) 0;
    }
    
    .footer-wrapper {
      flex-direction: column;
      gap: var(--spacing-4);
    }
    
    .footer-links {
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--spacing-4);
    }
  }
  
  @media (max-width: 479px) {
    .footer {
      padding: var(--spacing-5) 0;
    }
    
    .footer-brand-image {
      max-width: 120px;
    }
    
    .footer-links {
      gap: var(--spacing-3);
    }
    
    .footer-link {
      font-size: var(--font-size-xs);
    }
    
    .footer-copyright {
      font-size: var(--font-size-xs);
    }
  }
</style>
