---
export interface Props {
  title?: string;
  description?: string;
  highlights?: Array<{
    title: string;
    description: string;
  }>;
  metrics?: Array<{
    title: string;
    value: string;
    trend: string;
  }>;
}

const { 
  title = "Proven Security Expertise",
  description = "Our security team brings over a decade of experience from leading technology companies including Apple and Amazon. We understand both traditional and Web3 security challenges.",
  highlights = [
    {
      title: "Primary Risk Vectors",
      description: "Credential compromise, social engineering, malware infection, blind signing, and insider threats"
    },
    {
      title: "Compromise Detection",
      description: "Average detection time reduced from days to minutes with our monitoring platform"
    },
    {
      title: "Industry Recognition",
      description: "Trusted by leading DeFi protocols and recognized security researchers"
    }
  ],
  metrics = [
    {
      title: "Threats Prevented",
      value: "2,847",
      trend: "+23% this month"
    },
    {
      title: "Response Time",
      value: "Less than 5min",
      trend: "Average alert response"
    },
    {
      title: "Uptime",
      value: "99.9%",
      trend: "Platform availability"
    }
  ]
} = Astro.props;
---

<section class="expertise-section section-sm">
  <div class="container">
    <div class="expertise-content">
      <div class="expertise-grid">
        <div class="expertise-text">
          <h2 class="h3">{title}</h2>
          <p class="body-large expertise-description">
            {description}
          </p>
          <div class="expertise-highlights">
            {highlights.map((highlight) => (
              <div class="expertise-item">
                <div class="expertise-label">{highlight.title}</div>
                <p class="expertise-text-content">{highlight.description}</p>
              </div>
            ))}
          </div>
        </div>
        <div class="expertise-visual">
          <div class="expertise-metrics">
            {metrics.map((metric) => (
              <div class="metric-card">
                <div class="metric-title">{metric.title}</div>
                <div class="metric-value">{metric.value}</div>
                <div class="metric-trend">{metric.trend}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .expertise-section {
    padding: var(--spacing-16) 0;
    background: transparent;
    position: relative;
  }
  
  .expertise-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary-500), transparent);
    opacity: 0.2;
    z-index: 1;
  }
  
  .expertise-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.05);
    pointer-events: none;
    z-index: 0;
  }
  
  .expertise-content {
    position: relative;
    z-index: 1;
  }
  
  .expertise-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: start;
  }
  
  .expertise-text h2 {
    margin-bottom: var(--spacing-7);
    color: var(--color-text-primary);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-black);
    letter-spacing: -0.02em;
    line-height: var(--line-height-tight);
  }
  
  .expertise-description {
    margin-bottom: var(--spacing-10);
    color: var(--color-text-secondary);
    line-height: var(--line-height-normal);
    font-size: var(--font-size-base);
    max-width: 90%;
  }
  
  .expertise-highlights {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }
  
  .expertise-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1-5);
  }
  
  .expertise-label {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-tertiary);
    margin-bottom: 0;
    opacity: 0.6;
  }
  
  .expertise-text-content {
    color: var(--color-text-secondary);
    line-height: var(--line-height-normal);
    font-size: var(--font-size-base);
    margin: 0;
    font-weight: var(--font-weight-normal);
  }
  
  .expertise-visual {
    padding-top: var(--spacing-2);
  }
  
  .expertise-metrics {
    display: grid;
    gap: var(--spacing-6);
  }
  
  /* Vertical rhythm alignment: first metric aligns with first highlight */
  .expertise-metrics .metric-card:first-child {
    margin-top: 0;
  }
  
  .metric-card {
    background: var(--color-background-primary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-7) var(--spacing-6);
    text-align: center;
  }
  
  .metric-title {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    margin-bottom: var(--spacing-4);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0.7;
  }
  
  .metric-value {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--color-primary-400);
    margin-bottom: var(--spacing-2);
    line-height: var(--line-height-none);
    letter-spacing: -0.03em;
    font-variant-numeric: tabular-nums;
  }
  
  .metric-trend {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    opacity: 0.8;
    margin-top: var(--spacing-1);
  }
  
  @media (max-width: 1199px) {
    .expertise-section {
      padding: var(--spacing-12) 0;
    }
    
    .expertise-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-12);
      text-align: center;
    }
    
    .expertise-text h2 {
      margin-bottom: var(--spacing-6);
    }
    
    .expertise-description {
      max-width: 100%;
      margin-bottom: var(--spacing-8);
    }
    
    .expertise-visual {
      padding-top: var(--spacing-4);
    }
    
    .expertise-metrics {
      max-width: 600px;
      margin: 0 auto;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
  }
  
  @media (max-width: 767px) {
    .expertise-section {
      padding: var(--spacing-12) 0;
    }
    
    .expertise-text h2 {
      font-size: var(--font-size-3xl);
      margin-bottom: var(--spacing-5);
    }
    
    .expertise-description {
      margin-bottom: var(--spacing-6);
    }
    
    .expertise-highlights {
      text-align: left;
      max-width: 100%;
      gap: var(--spacing-5);
    }
    
    .expertise-metrics {
      grid-template-columns: 1fr;
      max-width: 100%;
      gap: var(--spacing-5);
    }
    
    .metric-card {
      padding: var(--spacing-6) var(--spacing-5);
    }
    
    .metric-value {
      font-size: var(--font-size-2xl);
    }
  }
</style>
