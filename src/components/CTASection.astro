---
export interface Props {
  title?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
  disclaimer?: string;
}

const { 
  title = "Secure Your Organization Today",
  description = "Don't wait for a security incident. Get comprehensive OpSec audits and monitoring from industry experts with proven experience protecting leading Web3 organizations.",
  primaryCta = {
    text: "Book An Audit",
    href: "/audits"
  },
  secondaryCta = {
    text: "Explore Sentry",
    href: "/sentry"
  },
  disclaimer = "Free consultation • W3OS & SEAL compliant • Enterprise-grade security"
} = Astro.props;
---

<section class="cta-section section">
  <div class="container">
    <div class="cta-content text-center">
      <h2 class="h2 cta-title">
        {title}
      </h2>
      <p class="body-large cta-description">
        {description}
      </p>
      <div class="cta-buttons flex gap-4 justify-center">
        <a href={primaryCta.href} class="btn btn-primary btn-lg">
          {primaryCta.text}
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        {secondaryCta && (
          <a href={secondaryCta.href} class="btn btn-secondary btn-lg">
            {secondaryCta.text}
          </a>
        )}
      </div>
      {disclaimer && (
        <p class="body-small cta-disclaimer">
          {disclaimer}
        </p>
      )}
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--spacing-4) 0;
    background: var(--color-background-primary);
    overflow: visible;
  }
  
  .cta-section .container {
    overflow: visible;
    padding-top: 0;
    padding-bottom: 0;
  }
  
  .cta-content {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-6) var(--spacing-6);
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    position: relative;
    z-index: 1;
  }
  
  .cta-content:hover {
    border-color: var(--color-border-purple);
    box-shadow: var(--shadow-glow);
    transform: translateY(-4px);
  }
  
  .cta-title {
    margin-bottom: var(--spacing-3);
    color: var(--color-text-primary);
    background: linear-gradient(135deg, var(--color-text-primary) 0%, var(--color-primary-300) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .cta-description {
    margin-bottom: var(--spacing-5);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-buttons {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-6);
  }
  
  .cta-disclaimer {
    color: var(--color-text-secondary);
    opacity: 0.8;
  }
  
  .cta-buttons .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    transition: all var(--transition-base);
    cursor: pointer;
    border: none;
    font-family: inherit;
    position: relative;
  }
  
  .cta-buttons .btn-primary {
    background: linear-gradient(135deg, #6d28d9 0%, #7c3aed 50%, #8b5cf6 100%);
    background-size: 200% 200%;
    color: white;
    box-shadow: 0 0 0 1px rgba(124, 58, 237, 0.2), 
                0 4px 12px rgba(124, 58, 237, 0.25),
                inset 0 1px 0 rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(124, 58, 237, 0.3);
  }
  
  .cta-buttons .btn-primary:hover {
    background: linear-gradient(135deg, #7c3aed 0%, #8b5cf6 50%, #a78bfa 100%);
    background-size: 200% 200%;
    box-shadow: 0 0 0 1px rgba(124, 58, 237, 0.3),
                0 6px 16px rgba(124, 58, 237, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.12);
    transform: translateY(-2px);
    border-color: rgba(139, 92, 246, 0.4);
  }
  
  .cta-buttons .btn-primary:focus {
    outline: none;
  }
  
  .cta-buttons .btn-primary:focus-visible {
    outline: 2px solid var(--color-primary-400);
    outline-offset: 2px;
  }
  
  .cta-buttons .btn-secondary {
    background: linear-gradient(135deg, 
                rgba(139, 92, 246, 0.1) 0%, 
                rgba(124, 58, 237, 0.05) 100%);
    color: var(--color-text-primary);
    border: 1px solid rgba(167, 139, 250, 0.5);
    backdrop-filter: var(--backdrop-blur-base);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05),
                0 4px 12px rgba(0, 0, 0, 0.1);
  }
  
  .cta-buttons .btn-secondary:hover {
    background: linear-gradient(135deg, 
                rgba(139, 92, 246, 0.2) 0%, 
                rgba(124, 58, 237, 0.1) 100%);
    border-color: rgba(167, 139, 250, 0.7);
    box-shadow: 0 0 0 1px rgba(167, 139, 250, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1),
                0 8px 20px rgba(124, 58, 237, 0.2);
    transform: translateY(-2px);
  }
  
  .cta-buttons .btn-secondary:focus {
    outline: none;
  }
  
  .cta-buttons .btn-secondary:focus-visible {
    outline: 2px solid var(--color-primary-400);
    outline-offset: 2px;
  }
  
  .cta-buttons .btn-lg {
    padding: var(--spacing-5) var(--spacing-10);
    font-size: var(--font-size-lg);
    border-radius: var(--radius-2xl);
    min-height: 48px;
  }
  
  .cta-buttons .btn svg {
    width: 16px;
    height: 16px;
    transition: transform var(--transition-base);
  }
  
  .cta-buttons .btn:hover svg {
    transform: translateX(3px);
  }
  
  @media (max-width: 767px) {
    .cta-buttons {
      flex-direction: column;
      align-items: center;
      gap: var(--spacing-3);
    }
    
    .cta-buttons .btn {
      width: 100%;
      max-width: 100%;
      min-height: 48px;
      justify-content: center;
      padding: var(--spacing-4) var(--spacing-6);
    }
    
    .cta-buttons .btn-lg {
      min-height: 48px;
      padding: var(--spacing-4) var(--spacing-6);
    }
    
    .cta-title {
      font-size: var(--font-size-4xl);
    }
  }
</style>
