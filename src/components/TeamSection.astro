---
const { 
  title = "About us",
  subtitle = "Security doesn't stop at code - Many hacks are due to insider threats, compromised private keys, and infrastructure security flaws.",
  teamMembers = []
} = Astro.props;
---

<section class="team-circles">
  <h1 class="heading-3">{title}</h1>
  <div class="text-block-9">
    {subtitle}
  </div>
  
  <div class="container-2">
    <div class="team-grid">
      {teamMembers.map(member => (
        <div class="team-card">
          <img 
            src={member.image} 
            loading="lazy" 
            width="137" 
            alt={member.name} 
            class="team-member-image" 
          />
          <div class="team-member-name">{member.name}</div>
          <div class="team-member-position">{member.position}</div>
          <p class="paragraph-18">
            {member.bio}
          </p>
          <div class="footer-social-block">
            {member.social.map(link => (
              <a href={link.url} target="_blank" class="footer-social-link">
                <img 
                  src={link.icon} 
                  loading="lazy" 
                  width="24" 
                  alt={link.platform} 
                  class="image-3" 
                />
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-circles {
    padding: 80px 0;
    text-align: center;
    background: #000000;
  }

  .heading-3 {
    font-size: 3rem;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 24px;
  }

  .text-block-9 {
    font-size: 1.25rem;
    color: #a0a0a0;
    max-width: 800px;
    margin: 0 auto 64px auto;
    line-height: 1.6;
  }

  .container-2 {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 48px;
    justify-items: center;
  }

  .team-card {
    background: #111111;
    border: 1px solid #333333;
    border-radius: 16px;
    padding: 32px;
    text-align: center;
    max-width: 400px;
    width: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .team-member-image {
    width: 137px;
    height: 137px;
    border-radius: 50%;
    margin-bottom: 24px;
    object-fit: cover;
  }

  .team-member-name {
    font-size: 1.5rem;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 8px;
  }

  .team-member-position {
    font-size: 1rem;
    color: #4f63ff;
    font-weight: 500;
    margin-bottom: 16px;
  }

  .paragraph-18, .paragraph-22 {
    color: #a0a0a0;
    line-height: 1.6;
    margin-bottom: 24px;
    font-size: 1rem;
  }

  .footer-social-block {
    display: flex;
    justify-content: center;
    gap: 16px;
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: #333333;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .footer-social-link:hover {
    background: #4f63ff;
    transform: translateY(-2px);
  }

  .image-3 {
    filter: brightness(0) invert(1);
  }

  @media (max-width: 767px) {
    .team-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    
    .heading-3 {
      font-size: 2.5rem;
    }
    
    .text-block-9 {
      font-size: 1.125rem;
    }
  }
</style>
