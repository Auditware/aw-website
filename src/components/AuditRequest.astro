            <div class="experience-year-item" data-service-index={index}>
              <div class="experience-top">
                <span class="experience-year-label">{exp.name}</span>
                <span class="experience-year-value">{exp.years}yr</span>
              </div>
              <div class="experience-bar">
                <div class="experience-fill" style={`width: ${exp.fillPercent}%`}></div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Audit Experience - Compact -->
      <div class="section-card compact-card">
        <div class="section-header-simple">
          <h3>Audit Background</h3>
        </div>
        <ul class="experience-list">
          {experience.map(item => (
            <li class="experience-item">
              <div class="experience-dot"></div>
              <span>{item}</span>
