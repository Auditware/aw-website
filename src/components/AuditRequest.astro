  /* Content Layout */
  .content-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 380px 1fr;
    gap: 40px;
    align-items: start;
  }

  .sidebar {
    position: sticky;
    top: 100px;
    display: flex;
    flex-direction: column;
