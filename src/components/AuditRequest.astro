<script>
  // Scroll-based highlighting for service offerings and experience items
  const serviceCards = document.querySelectorAll('.service-card');
  const experienceItems = document.querySelectorAll('.experience-year-item');

  const observerOptions = {
    root: null,
    rootMargin: '-40% 0px -40% 0px',
    threshold: 0
  };

  const serviceObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const serviceIndex = entry.target.getAttribute('data-service-index');
        
        // Remove active class from all cards
        serviceCards.forEach(card => card.classList.remove('active'));
        // Add active class to current card
        entry.target.classList.add('active');
        
        // Highlight corresponding experience item
        experienceItems.forEach((item, idx) => {
          if (idx === parseInt(serviceIndex)) {
            item.classList.add('highlighted');
          } else {
            item.classList.remove('highlighted');
          }
        });
      }
    });
  }, observerOptions);

  serviceCards.forEach(card => {
    serviceObserver.observe(card);
  });
</script>

