    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .experience-year-item {
    display: flex;
    flex-direction: column;
    gap: 6px;
    transition: all 0.3s ease;
    padding: 4px;
    border-radius: 8px;
  }

  .experience-year-item.highlighted {
    background: rgba(79, 99, 255, 0.1);
    transform: translateX(4px);
  }

