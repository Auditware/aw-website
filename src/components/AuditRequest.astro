    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .experience-year-label {
    font-size: 0.8125rem;
    color: #cccccc;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .experience-year-item.highlighted .experience-year-label {
    color: #ffffff;
  }

  .experience-year-value {
    font-size: 0.75rem;
    color: #4f63ff;
    font-weight: 600;
  }

  .experience-bar {
    height: 6px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
    overflow: hidden;
    position: relative;
  }

  .experience-fill {
    height: 100%;
    background: linear-gradient(90deg, #4f63ff 0%, #8c83b2 100%);
    border-radius: 3px;
    transition: all 0.8s ease;
    box-shadow: 0 0 8px rgba(79, 99, 255, 0.3);
  }

  .experience-year-item.highlighted .experience-fill {
    box-shadow: 0 0 12px rgba(79, 99, 255, 0.6);
  }

