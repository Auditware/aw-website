    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #4f63ff 0%, #8c83b2 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .service-card:hover::before,
  .service-card.active::before {
    opacity: 1;
  }

  .service-card.featured {
    border-color: rgba(79, 99, 255, 0.3);
    background: rgba(79, 99, 255, 0.05);
  }

  .service-card.featured::before {
    opacity: 1;
  }

  .featured-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    background: linear-gradient(135deg, #4f63ff 0%, #8c83b2 100%);
    color: #ffffff;
    padding: 4px 10px;
    border-radius: 16px;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .service-card:hover,
  .service-card.active {
    border-color: rgba(79, 99, 255, 0.4);
    box-shadow: 0 8px 32px rgba(79, 99, 255, 0.15);
    transform: translateY(-2px);
  }

