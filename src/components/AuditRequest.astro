    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  .section-card:hover {
    border-color: rgba(79, 99, 255, 0.3);
    box-shadow: 0 4px 24px rgba(79, 99, 255, 0.1);
  }

  .main-card {
    background: rgba(255, 255, 255, 0.03);
    padding: 32px;
  }

  .compact-card {
    padding: 16px;
  }

  /* Slim Sections (for Trusted By and Compliance) */
  .slim-section {
    background: rgba(255, 255, 255, 0.015);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 12px 16px;
    backdrop-filter: blur(6px);
  }

  .slim-header h4 {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 10px;
  }

  .section-header-simple {
    margin-bottom: 14px;
    padding-bottom: 10px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .section-header-simple h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .section-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(79, 99, 255, 0.1);
    border-radius: 10px;
    color: #4f63ff;
    flex-shrink: 0;
  }

  .section-icon svg {
    width: 20px;
    height: 20px;
  }

