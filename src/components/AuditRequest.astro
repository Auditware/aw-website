---
const { 
  experienceYears = [],
  experience = [],
  trustedBy = [],
  serviceOfferings = [],
  processSteps = [],
  contact = {}
} = Astro.props;

// Sort experience by years descending and calculate fill percentages
const sortedExperience = [...experienceYears].sort((a, b) => b.years - a.years);
const maxYears = sortedExperience[0]?.years || 1;
const experienceWithFill = sortedExperience.map(exp => ({
  ...exp,
  fillPercent: (exp.years / maxYears) * 100
}));
---

<section class="audit-request-page">
  <!-- Cursor-reactive background -->
  <div class="cursor-glow"></div>
  
  <!-- Hero Header Section -->
  <div class="audit-header">
    <div class="header-content">
      <div class="header-left">
        <div class="badge-container">
          <span class="status-badge">Available for Projects</span>
        </div>
        <h1 class="main-title">Security Audit Services</h1>
        <p class="subtitle">Enterprise-grade security assessments for Web3 organizations</p>
        
        <div class="quick-stats">
          <div class="stat-item">
            <div class="stat-number">10+</div>
            <div class="stat-label">Years Experience</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">50+</div>
            <div class="stat-label">Audits Completed</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Support Available</div>
          </div>
        </div>
      </div>
      
      <div class="header-right">
        <div class="contact-card">
          <h3>Ready to Get Started?</h3>
          <p>Book a free 30-minute consultation</p>
          <a href="https://calendly.com/d/cnqr-49f-xdy/auditware-consultation" class="cta-button-primary">
            Schedule Consultation
          </a>
          <div class="contact-divider"></div>
          <div class="contact-info">
            <div class="info-item">
              <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>contact@auditware.io</span>
            </div>
            <div class="info-item">
              <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Response within 24 hours</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="content-wrapper">
    <!-- Left Column: Skills & Experience -->
    <aside class="sidebar">
      <!-- Experience -->
      <div class="section-card experience-card">
        <div class="section-header">
          <div class="section-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h2>Experience</h2>
        </div>
        <div class="experience-years-grid">
          {experienceWithFill.map((exp, index) => (
            <div class="experience-year-item" data-service-index={index}>
              <div class="experience-top">
                <span class="experience-year-label">{exp.name}</span>
                <span class="experience-year-value">{exp.years}yr</span>
              </div>
              <div class="experience-bar">
                <div class="experience-fill" style={`width: ${exp.fillPercent}%`}></div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Audit Experience - Compact -->
      <div class="section-card compact-card">
        <div class="section-header-simple">
          <h3>Audit Background</h3>
        </div>
        <ul class="experience-list">
          {experience.map(item => (
            <li class="experience-item">
              <div class="experience-dot"></div>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Trusted By & Compliance - Slim combined -->
      <div class="slim-section">
        <div class="slim-header">
          <h4>Trusted By</h4>
        </div>
        <div class="clients-grid-compact">
          {trustedBy.map(client => (
            <img src={client.logo} alt={client.name} class="client-logo-compact" loading="lazy" />
          ))}
        </div>
      </div>

      <div class="slim-section">
        <div class="slim-header">
          <h4>Compliance</h4>
        </div>
        <div class="framework-badges-compact">
          <div class="framework-badge-compact">
            <img src="/images/W3OS-Graphic.png" alt="W3OS" class="framework-icon-compact" />
            <span>W3OS</span>
          </div>
          <div class="framework-badge-compact">
            <img src="/images/framework-logomark-circle-blue.svg" alt="SEAL" class="framework-icon-compact" />
            <span>SEAL</span>
          </div>
        </div>
      </div>
    </aside>

    <!-- Right Column: Service Offerings -->
    <main class="main-content">
      <!-- Service Packages -->
      <div class="section-card main-card">
        <div class="section-header">
          <div class="section-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h2>Service Offerings</h2>
        </div>
        
        <div class="services-grid" id="services-grid">
          {serviceOfferings.map((service, index) => (
            <div class={`service-card ${service.featured ? 'featured' : ''}`} data-service-index={index}>
              {service.featured && <div class="featured-badge">Most Popular</div>}
              <div class="service-header">
                <h3 class="service-title">{service.title}</h3>
                {service.tagline && <p class="service-tagline">{service.tagline}</p>}
              </div>
              
              <div class="service-description">
                <p>{service.description}</p>
              </div>

              <details class="service-details" open={service.featured}>
                <summary class="details-toggle">View Details</summary>
                <div class="details-content">
                  <div class="service-features">
                    <div class="features-header">What's Included:</div>
                    <ul class="features-list">
                      {service.features.slice(0, 4).map(feature => (
                        <li class="feature-item">
                          <svg class="check-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                          </svg>
                          <span>{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  {service.deliverables && (
                    <div class="service-deliverables">
                      <div class="deliverables-header">Key Deliverables:</div>
                      <ul class="deliverables-list">
                        {service.deliverables.slice(0, 3).map(deliverable => (
                          <li class="deliverable-item">
                            <svg class="doc-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <span>{deliverable}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </details>

              {service.duration && (
                <div class="service-meta">
                  <div class="meta-item">
                    <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>{service.duration}</span>
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- Audit Process - Compact Interactive -->
      <div class="section-card main-card">
        <div class="section-header">
          <div class="section-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
          </div>
          <h2>Our Audit Process</h2>
        </div>
        
        <div class="process-timeline-compact">
          {processSteps.map((step, index) => (
            <div class="process-step-compact" data-step={index}>
              <div class="step-card">
                <div class="step-top">
                  <div class="step-number-compact">{index + 1}</div>
                  <h4 class="step-title-compact">{step.title}</h4>
                  {step.duration && <span class="step-duration-compact">{step.duration}</span>}
                </div>
                <details class="step-details">
                  <summary class="step-summary">Details</summary>
                  <p class="step-description-compact">{step.description}</p>
                </details>
              </div>
              {index < processSteps.length - 1 && <div class="step-arrow">→</div>}
            </div>
          ))}
        </div>
      </div>

      <!-- Final CTA -->
      <div class="final-cta">
        <div class="cta-content">
          <h3>Ready to Secure Your Organization?</h3>
          <p>Let's discuss how we can protect your project with a comprehensive security audit.</p>
          <div class="cta-buttons">
            <a href="https://calendly.com/d/cnqr-49f-xdy/auditware-consultation" class="cta-button-primary large">
              Schedule Free Consultation
            </a>
            <a href="mailto:contact@auditware.io" class="cta-button-secondary large">
              Email Us Directly
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</section>

<style>
  .audit-request-page {
    background: #000000;
    min-height: 100vh;
    padding-bottom: 80px;
    position: relative;
    overflow: hidden;
  }

  /* Cursor-reactive glow */
  .cursor-glow {
    position: fixed;
    width: 600px;
    height: 600px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(79, 99, 255, 0.15) 0%, rgba(140, 131, 178, 0.08) 30%, transparent 70%);
    pointer-events: none;
    transform: translate(-50%, -50%);
    transition: opacity 0.3s ease;
    opacity: 0;
