---
// No imports needed
---

<div class="fixed-navbar">
  <div class="navbar">
    <div class="container navbar-container">
      <div class="navbar-holder">
        <div class="navbar-container">
          <a href="/" class="brand">
            <img 
              width="702" 
              height="Auto" 
              alt="Auditware Logo" 
              loading="lazy" 
              src="/images/Logo-hi-vis.png" 
              class="brand-image"
            />
          </a>
          <nav class="nav-menu" id="navMenu">
            <div class="nav-menu-link-holder" id="navMenuLinkHolder">
              <div class="nav-menu-button-holder">
                <a href="/" class="nav-button home-button" data-page="home" title="Home">
                  <svg class="home-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </a>
                <a href="/audit-wizard" class="nav-button" data-page="audit-wizard">Audit Wizard</a>
                <a href="/sentry" class="nav-button" data-page="sentry">Sentry</a>
                <a href="/radar" class="nav-button" data-page="radar">Radar</a>
                <a href="/request-an-audit" class="nav-button nav-button-cta" data-page="audits">Audits</a>
              </div>
            </div>
          </nav>
          <button class="menu-button" id="menuButton" aria-label="Toggle menu">
            <div class="menu-icon" id="menuIcon">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .fixed-navbar {
    z-index: 100;
    width: 100%;
    position: sticky;
    top: 0;
    transition: all var(--transition-base);
  }

  .navbar {
    backdrop-filter: var(--backdrop-blur-lg);
    background: var(--color-background-glass-medium);
    border-bottom: 1px solid var(--color-border-primary);
    height: 72px;
    position: sticky;
    top: 0;
    transition: all var(--transition-base);
  }
  
  .fixed-navbar:has(.navbar:hover),
  .fixed-navbar.scrolled .navbar {
    background: var(--color-background-glass-strong);
    border-bottom-color: var(--color-border-strong);
    box-shadow: var(--shadow-elevation-low);
  }

  .navbar-holder {
    width: 100%;
    height: 100%;
  }

  .navbar-container {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .container {
    border: 1px solid transparent;
    max-width: 100%;
    margin: 0 auto 40px;
    padding: 1em 2em;
  }

  .container.navbar-container {
    background: transparent;
    border: none;
    align-items: center;
    height: 100%;
    padding: 0 var(--spacing-8);
    display: flex;
  }

  .brand {
    padding-left: 0;
    text-decoration: none;
    transition: transform var(--transition-base);
  }
  
  .brand:hover {
    transform: scale(1.02);
  }

  .brand-image {
    max-width: 160px;
    height: auto;
    transition: opacity var(--transition-base);
  }
  
  .brand:hover .brand-image {
    opacity: 0.9;
  }

  .nav-menu {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .nav-menu-link-holder {
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .nav-menu-button-holder {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  /* Nav Button Styles with Colored Outlines */
  .nav-button {
    height: 36px;
    padding: 10px 20px;
    font-size: var(--font-size-sm);
    line-height: 1;
    border-radius: var(--radius-lg);
    background: var(--color-background-glass-medium);
    border: 1px solid var(--color-border-primary);
    backdrop-filter: var(--backdrop-blur-base);
    color: var(--color-text-primary);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-family: var(--font-mono);
    font-weight: 500;
    transition: all var(--transition-base);
    cursor: pointer;
    position: relative;
  }

  .nav-button:hover {
    background: var(--gradient-purple);
    transform: translateY(-1px);
    box-shadow: var(--shadow-glow);
  }

  /* Home Button - Icon Only */
  .home-button {
    padding: 8px;
    width: 36px;
  }

  .home-icon {
    width: 20px;
    height: 20px;
  }

  /* Colored Outlines for Each Page */
  .nav-button[data-page="home"]:hover {
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 0 12px rgba(255, 255, 255, 0.2);
  }

  .nav-button[data-page="audit-wizard"]:hover {
    border-color: rgba(79, 99, 255, 0.5);
    box-shadow: 0 0 12px rgba(79, 99, 255, 0.3);
  }

  .nav-button[data-page="sentry"]:hover {
    border-color: rgba(89, 184, 134, 0.5);
    box-shadow: 0 0 12px rgba(89, 184, 134, 0.3);
  }

  .nav-button[data-page="radar"]:hover {
    border-color: rgba(33, 76, 64, 0.7);
    box-shadow: 0 0 12px rgba(33, 76, 64, 0.5);
  }

  .nav-button[data-page="audits"]:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 0 0 12px rgba(59, 130, 246, 0.3);
  }

  /* CTA Button - Primary Audits Button */
  .nav-button-cta {
    background: var(--color-background-glass-medium);
    border: 1px solid #4f63ff;
    box-shadow: 0 0 12px rgba(79, 99, 255, 0.3);
    font-weight: 600;
  }

  .nav-button-cta:hover {
    background: rgba(79, 99, 255, 0.1);
    border-color: #6d7fff;
    box-shadow: 0 0 20px rgba(79, 99, 255, 0.5);
    transform: translateY(-2px);
  }

  /* Burger Menu */
  .menu-button {
    border-radius: var(--radius-lg);
    padding: 10px;
    display: none;
    background: var(--color-background-glass-medium);
    border: 1px solid var(--color-border-primary);
    cursor: pointer;
    transition: all var(--transition-base);
  }
  
  .menu-button:hover {
    background: var(--color-background-glass-strong);
    border-color: var(--color-border-strong);
  }

  .menu-icon {
    width: 24px;
    height: 18px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .menu-icon span {
    width: 100%;
    height: 2px;
    background-color: var(--color-text-primary);
    border-radius: 2px;
    transition: all var(--transition-base);
  }

  .menu-button.active .menu-icon span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-button.active .menu-icon span:nth-child(2) {
    opacity: 0;
  }

  .menu-button.active .menu-icon span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Mobile styles */
  @media screen and (max-width: 991px) {
    .navbar {
      height: 64px;
    }

    .nav-menu {
      position: fixed;
      top: 80px;
      right: 20px;
      width: 240px;
      height: auto;
      z-index: 1000;
    }
    
    .nav-menu-link-holder {
      background: rgba(10, 10, 10, 0.95);
      backdrop-filter: var(--backdrop-blur-xl);
      border: 1px solid var(--color-border-strong);
      border-radius: var(--radius-2xl);
      padding: var(--spacing-4);
      box-shadow: var(--shadow-elevation-high);
      display: none;
      flex-direction: column;
      gap: var(--spacing-2);
      width: 100%;
    }

    .nav-menu-link-holder.open {
      display: flex;
      animation: slideDown 0.3s ease;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .nav-menu-button-holder {
      flex-direction: column;
      width: 100%;
      gap: var(--spacing-2);
    }

    .nav-button {
      width: 100%;
      justify-content: flex-start;
    }

    .home-button {
      width: 100%;
      justify-content: flex-start;
      padding: 10px 20px;
    }

    .home-button::after {
      content: 'Home';
      margin-left: 8px;
    }

    .menu-button {
      display: flex;
    }
  }

  @media screen and (max-width: 479px) {
    .navbar {
      height: 60px;
    }
    
    .container.navbar-container {
      padding-left: var(--spacing-4);
      padding-right: var(--spacing-4);
    }

    .brand-image {
      max-width: 140px;
    }

    .nav-menu {
      position: fixed;
      top: 76px;
      right: 16px;
      left: 16px;
      width: auto;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('menuButton');
  const navMenuLinkHolder = document.getElementById('navMenuLinkHolder');

  if (menuButton && navMenuLinkHolder) {
    menuButton.addEventListener('click', () => {
      menuButton.classList.toggle('active');
      navMenuLinkHolder.classList.toggle('open');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!menuButton.contains(target) && !navMenuLinkHolder.contains(target)) {
        menuButton.classList.remove('active');
        navMenuLinkHolder.classList.remove('open');
      }
    });

    // Close menu when clicking on a link
    const navButtons = navMenuLinkHolder.querySelectorAll('.nav-button');
    navButtons.forEach(button => {
      button.addEventListener('click', () => {
        menuButton.classList.remove('active');
        navMenuLinkHolder.classList.remove('open');
      });
    });
  }
</script>
