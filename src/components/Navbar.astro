---
import Button from './Button.astro';
---

<div class="fixed-navbar">
  <div class="navbar">
    <div class="container navbar-container">
      <div class="navbar-holder">
        <div class="navbar-container">
          <a href="/" class="brand">
            <img 
              width="702" 
              height="Auto" 
              alt="Auditware Logo" 
              loading="lazy" 
              src="/images/Logo-hi-vis.png" 
              class="brand-image"
            />
          </a>
          <nav class="nav-menu">
            <div class="nav-menu-link-holder">
              <div class="nav-menu-link-container">
                <div class="nav-links"></div>
              </div>
              <div class="nav-menu-button-holder">
                <Button href="/audit-wizard" variant="navbar">Audit Wizard</Button>
                <Button href="/sentry" variant="navbar">Sentry</Button>
                <Button href="/radar" variant="navbar">Radar</Button>
                <img src="/images/GitHub_Invertocat_Light.svg" loading="lazy" width="16" alt="GitHub" class="github-icon" />
                <Button href="https://github.com/W3OSC/web3-opsec-standard/tree/main" target="_blank" variant="navbar">W3OS</Button>
                <Button href="/request-an-audit" variant="navbar">Audits</Button>
              </div>
            </div>
          </nav>
          <div class="menu-button">
            <div class="menu-icon"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .fixed-navbar {
    z-index: 19;
    width: 100%;
    position: sticky;
    top: 0;
  }

  .navbar {
    backdrop-filter: blur(21px);
    background-color: #121213;
    background-image: linear-gradient(#2b2b2b, #030303);
    border: 1px solid #1b1b1b;
    height: 60px;
    position: sticky;
    top: 0;
  }

  .navbar-holder {
    width: 100%;
    height: 100%;
  }

  .navbar-container {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .container {
    border: 1px solid transparent;
    max-width: 100%;
    margin: 0 auto 40px;
    padding: 1em 2em;
  }

  .container.navbar-container {
    background-color: #121212;
    background-image: linear-gradient(#2b2b2b, #030303);
    border: 1px solid transparent;
    align-items: center;
    height: 100%;
    padding: 0 2em;
    display: flex;
  }

  .brand {
    padding-left: 0;
    text-decoration: none;
  }

  .brand-image {
    max-width: 40%;
  }

  .nav-menu {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .nav-menu-link-holder {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .nav-menu-link-container {
    flex: 1;
    order: 0;
    justify-content: flex-end;
    align-items: stretch;
    height: 100%;
    padding-right: 0;
    display: flex;
  }

  .nav-menu-button-holder {
    order: 0;
    align-self: auto;
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .nav-links {
    grid-column-gap: 40px;
    justify-content: flex-start;
    align-items: center;
    height: 100%;
    display: flex;
  }

  .github-icon {
    vertical-align: sub;
    position: static;
  }

  .menu-button {
    border-radius: 12px;
    padding: 13px;
    display: none;
  }

  .menu-icon {
    width: 18px;
    height: 18px;
    background-color: #fff;
  }

  /* Mobile styles */
  @media screen and (max-width: 991px) {
    .nav-menu-link-holder {
      grid-row-gap: 20px;
      background-color: #0d0d0d;
      flex-direction: column;
      height: auto;
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .nav-menu-link-container,
    .nav-menu {
      height: auto;
    }

    .nav-links {
      grid-row-gap: 20px;
      flex-direction: column;
      height: auto;
    }

    .menu-button {
      display: block;
    }
  }

  @media screen and (max-width: 479px) {
    .container.navbar-container {
      padding-left: 1em;
      padding-right: 1em;
    }

    .brand-image {
      max-width: 50%;
    }
  }
</style>
