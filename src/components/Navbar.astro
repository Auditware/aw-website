// No imports needed
---

<div class="fixed-navbar">
  <div class="navbar">
    <div class="container navbar-container">
      <div class="navbar-holder">
        <div class="navbar-content">
          <a href="/" class="brand">
            <img 
              width="702" 
              height="Auto" 
              alt="Auditware Logo" 
              loading="eager" 
              src="/images/Logo-hi-vis.png" 
              class="brand-image"
              fetchpriority="high"
            />
          </a>
          <nav class="nav-menu" id="navMenu">
            <div class="nav-menu-link-holder" id="navMenuLinkHolder">
              <div class="nav-menu-button-holder">
                <a href="/" class="nav-button home-button" data-page="home" title="Home">
                  <svg class="home-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </a>
                <a href="/sentry" class="nav-button" data-page="sentry">Sentry</a>
                <a href="/audit-wizard" class="nav-button" data-page="audit-wizard">Audit Wizard</a>
                <a href="/radar" class="nav-button" data-page="radar">Radar</a>
                <a href="/audits" class="nav-button nav-button-cta" data-page="audits">Audits</a>
              </div>
            </div>
          </nav>
          <button class="menu-button" id="menuButton" aria-label="Toggle menu">
            <div class="menu-icon" id="menuIcon">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Fixed navbar container */
  .fixed-navbar {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 100;
    transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Main navbar - frosted glass effect */
  .navbar {
    height: 72px;
    background: rgba(10, 10, 10, 0.6);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced glass effect on scroll */
  .fixed-navbar.scrolled .navbar {
    background: rgba(10, 10, 10, 0.8);
    border-bottom-color: rgba(255, 255, 255, 0.12);
    box-shadow: 0 2px 8px -2px rgba(0, 0, 0, 0.2), 0 4px 16px -4px rgba(0, 0, 0, 0.1);
  }

  .navbar-holder {
    width: 100%;
    height: 100%;
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .container.navbar-container {
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0 2rem;
    background: transparent;
    border: none;
  }

  /* Brand logo */
  .brand {
    display: block;
    text-decoration: none;
    transition: transform 250ms cubic-bezier(0.4, 0, 0.2, 1), opacity 250ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .brand:hover {
    transform: scale(1.02);
    opacity: 0.9;
  }
  
  .brand:focus {
    outline: none;
  }
  
  .brand:focus-visible {
    outline: 2px solid var(--color-primary-400);
    outline-offset: 4px;
    border-radius: var(--radius-md);
  }

  .brand-image {
    max-width: 160px;
    height: auto;
    display: block;
  }

  /* Navigation menu */
  .nav-menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .nav-menu-link-holder {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .nav-menu-button-holder {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  /* Navigation buttons */
  .nav-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    height: 36px;
    padding: 10px 20px;
    font-size: 0.875rem;
    line-height: 1;
    font-family: 'JetBrains Mono', 'SF Mono', 'Monaco', monospace;
    font-weight: 500;
    color: #ffffff;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.5rem;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    text-decoration: none;
    cursor: pointer;
    transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .nav-button:hover,
  .nav-button.active-page {
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.15);
  }
  
  .nav-button:focus {
    outline: none;
  }
  
  .nav-button:focus-visible {
    outline: 2px solid var(--color-primary-400);
    outline-offset: 2px;
    border-color: var(--color-primary-400);
  }

  /* Colored glow effects for each page */
  .nav-button[data-page="home"]:hover,
  .nav-button[data-page="home"].active-page {
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 0 12px rgba(255, 255, 255, 0.2);
  }

  .nav-button[data-page="audit-wizard"]:hover,
  .nav-button[data-page="audit-wizard"].active-page {
    border-color: rgba(79, 99, 255, 0.5);
    box-shadow: 0 0 12px rgba(79, 99, 255, 0.3);
  }

  .nav-button[data-page="sentry"]:hover,
  .nav-button[data-page="sentry"].active-page {
    border-color: rgba(89, 184, 134, 0.5);
    box-shadow: 0 0 12px rgba(89, 184, 134, 0.3);
  }

  .nav-button[data-page="radar"]:hover,
  .nav-button[data-page="radar"].active-page {
    border-color: rgba(33, 76, 64, 0.7);
    box-shadow: 0 0 12px rgba(33, 76, 64, 0.5);
  }

  .nav-button[data-page="audits"]:hover,
  .nav-button[data-page="audits"].active-page {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 0 0 12px rgba(59, 130, 246, 0.3);
  }

  /* Home button - icon only on desktop */
  .home-button {
    padding: 8px;
    width: 36px;
  }

  .home-icon {
    width: 20px;
    height: 20px;
  }

  /* CTA Button - Audits */
  .nav-button-cta {
    background: rgba(79, 99, 255, 0.15);
    border: 1px solid rgba(79, 99, 255, 0.4);
    box-shadow: 0 0 12px rgba(79, 99, 255, 0.3);
    font-weight: 600;
  }

  .nav-button-cta:hover,
  .nav-button-cta.active-page {
    background: rgba(79, 99, 255, 0.2);
    border-color: rgba(109, 127, 255, 0.5);
    box-shadow: 0 0 20px rgba(79, 99, 255, 0.5);
    transform: translateY(-2px);
  }
  
  .nav-button-cta:focus-visible {
    outline: 2px solid rgba(79, 99, 255, 0.8);
    outline-offset: 2px;
  }

  /* Mobile menu button */
  .menu-button {
    display: none;
    padding: 10px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-button:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.12);
  }
  
  .menu-button:focus {
    outline: none;
  }
  
  .menu-button:focus-visible {
    outline: 2px solid var(--color-primary-400);
    outline-offset: 2px;
    border-color: var(--color-primary-400);
  }

  .menu-icon {
    width: 24px;
    height: 18px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .menu-icon span {
    width: 100%;
    height: 2px;
    background-color: #ffffff;
    border-radius: 2px;
    transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Animated hamburger to X */
  .menu-button.active .menu-icon span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-button.active .menu-icon span:nth-child(2) {
    opacity: 0;
  }

  .menu-button.active .menu-icon span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Mobile styles */
  @media screen and (max-width: 991px) {
    .navbar {
      height: 64px;
    }

    .nav-menu {
      position: fixed;
      top: 80px;
      right: 20px;
      width: 240px;
      height: auto;
      z-index: 1000;
    }
    
    .nav-menu-link-holder {
      display: none;
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
      padding: 1rem;
      background: rgba(10, 10, 10, 0.95);
      backdrop-filter: blur(32px);
      -webkit-backdrop-filter: blur(32px);
      border: 1px solid rgba(255, 255, 255, 0.12);
      border-radius: 1rem;
      box-shadow: 0 8px 32px -8px rgba(0, 0, 0, 0.30), 0 16px 48px -12px rgba(0, 0, 0, 0.20);
    }

    .nav-menu-link-holder.open {
      display: flex;
      animation: slideDown 0.3s ease;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .nav-menu-button-holder {
      flex-direction: column;
      width: 100%;
      gap: 0.5rem;
    }

    .nav-button {
      width: 100%;
      justify-content: flex-start;
    }

    .home-button {
      width: 100%;
      justify-content: flex-start;
      padding: 10px 20px;
    }

    .home-button::after {
      content: 'Home';
      margin-left: 8px;
    }

    .menu-button {
      display: flex;
    }
  }

  /* Small mobile adjustments */
  @media screen and (max-width: 479px) {
    .navbar {
      height: 60px;
    }
    
    .container.navbar-container {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .brand-image {
      max-width: 140px;
    }

    .nav-menu {
      position: fixed;
      top: 76px;
      right: 16px;
      left: 16px;
      width: auto;
    }
  }
</style>

<script defer>
  // Mobile menu toggle - Deferred to avoid blocking initial render
  const menuButton = document.getElementById('menuButton');
  const navMenuLinkHolder = document.getElementById('navMenuLinkHolder');

  if (menuButton && navMenuLinkHolder) {
    menuButton.addEventListener('click', () => {
      menuButton.classList.toggle('active');
      navMenuLinkHolder.classList.toggle('open');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!menuButton.contains(target) && !navMenuLinkHolder.contains(target)) {
        menuButton.classList.remove('active');
        navMenuLinkHolder.classList.remove('open');
      }
    });

    // Close menu when clicking on a link
    const navButtons = navMenuLinkHolder.querySelectorAll('.nav-button');
    navButtons.forEach(button => {
      button.addEventListener('click', () => {
        menuButton.classList.remove('active');
        navMenuLinkHolder.classList.remove('open');
      });
    });
  }

  // Highlight current page button
  const highlightCurrentPage = () => {
    const currentPath = window.location.pathname;
    const navButtons = document.querySelectorAll('.nav-button');
    
    navButtons.forEach(button => {
      const href = button.getAttribute('href');
      
      // Remove active class from all buttons first
      button.classList.remove('active-page');
      
      // Check if this button matches the current page
      if (href === currentPath || 
          (href !== '/' && currentPath.startsWith(href))) {
        button.classList.add('active-page');
      }
      
      // Special case for home page
      if (currentPath === '/' && href === '/') {
        button.classList.add('active-page');
      }
    });
  };

  // Run on initial load
  document.addEventListener('DOMContentLoaded', highlightCurrentPage);
  
  // Run after navigation (for SPAs or Astro view transitions)
  document.addEventListener('astro:page-load', highlightCurrentPage);
</script>
