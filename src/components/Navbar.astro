---
import Button from './Button.astro';
---

<div class="fixed-navbar">
  <div class="navbar">
    <div class="container navbar-container">
      <div class="navbar-holder">
        <div class="navbar-container">
          <a href="/" class="brand">
            <img 
              width="702" 
              height="Auto" 
              alt="Auditware Logo" 
              loading="lazy" 
              src="/images/Logo-hi-vis.png" 
              class="brand-image"
            />
          </a>
          <nav class="nav-menu">
            <div class="nav-menu-link-holder">
              <div class="nav-menu-link-container">
                <div class="nav-links"></div>
              </div>
              <div class="nav-menu-button-holder">
                <Button href="/audit-wizard" variant="navbar">Audit Wizard</Button>
                <Button href="/sentry" variant="navbar">Sentry</Button>
                <Button href="/radar" variant="navbar">Radar</Button>
                <img src="/images/GitHub_Invertocat_Light.svg" loading="lazy" width="16" alt="GitHub" class="github-icon" />
                <Button href="https://github.com/W3OSC/web3-opsec-standard/tree/main" target="_blank" variant="navbar">W3OS</Button>
                <Button href="/request-an-audit" variant="navbar">Audits</Button>
              </div>
            </div>
          </nav>
          <div class="menu-button">
            <div class="menu-icon"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .fixed-navbar {
    z-index: 100;
    width: 100%;
    position: sticky;
    top: 0;
    transition: all var(--transition-base);
  }

  .navbar {
    backdrop-filter: var(--backdrop-blur-lg);
    background: var(--color-background-glass-medium);
    border-bottom: 1px solid var(--color-border-primary);
    height: 72px;
    position: sticky;
    top: 0;
    transition: all var(--transition-base);
  }
  
  .fixed-navbar:has(.navbar:hover),
  .fixed-navbar.scrolled .navbar {
    background: var(--color-background-glass-strong);
    border-bottom-color: var(--color-border-strong);
    box-shadow: var(--shadow-elevation-low);
  }

  .navbar-holder {
    width: 100%;
    height: 100%;
  }

  .navbar-container {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .container {
    border: 1px solid transparent;
    max-width: 100%;
    margin: 0 auto 40px;
    padding: 1em 2em;
  }

  .container.navbar-container {
    background: transparent;
    border: none;
    align-items: center;
    height: 100%;
    padding: 0 var(--spacing-8);
    display: flex;
  }

  .brand {
    padding-left: 0;
    text-decoration: none;
    transition: transform var(--transition-base);
  }
  
  .brand:hover {
    transform: scale(1.02);
  }

  .brand-image {
    max-width: 160px;
    height: auto;
    transition: opacity var(--transition-base);
  }
  
  .brand:hover .brand-image {
    opacity: 0.9;
  }

  .nav-menu {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .nav-menu-link-holder {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .nav-menu-link-container {
    flex: 1;
    order: 0;
    justify-content: flex-end;
    align-items: stretch;
    height: 100%;
    padding-right: 0;
    display: flex;
  }

  .nav-menu-button-holder {
    order: 0;
    align-self: auto;
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  .nav-links {
    grid-column-gap: var(--spacing-8);
    justify-content: flex-start;
    align-items: center;
    height: 100%;
    display: flex;
  }

  .github-icon {
    vertical-align: sub;
    position: static;
    opacity: 0.8;
    transition: opacity var(--transition-base);
  }
  
  .github-icon:hover {
    opacity: 1;
  }

  .menu-button {
    border-radius: var(--radius-lg);
    padding: var(--spacing-3);
    display: none;
    background: var(--color-background-glass-medium);
    border: 1px solid var(--color-border-primary);
    cursor: pointer;
    transition: all var(--transition-base);
  }
  
  .menu-button:hover {
    background: var(--color-background-glass-strong);
    border-color: var(--color-border-strong);
  }

  .menu-icon {
    width: 20px;
    height: 20px;
    background-color: var(--color-text-primary);
  }

  /* Mobile styles */
  @media screen and (max-width: 991px) {
    .navbar {
      height: 64px;
    }
    
    .nav-menu-link-holder {
      grid-row-gap: var(--spacing-5);
      background: var(--color-background-glass-strong);
      backdrop-filter: var(--backdrop-blur-xl);
      border: 1px solid var(--color-border-primary);
      border-radius: var(--radius-2xl);
      flex-direction: column;
      height: auto;
      padding: var(--spacing-6);
      margin-top: var(--spacing-4);
      box-shadow: var(--shadow-elevation-high);
    }

    .nav-menu-link-container,
    .nav-menu {
      height: auto;
    }

    .nav-links {
      grid-row-gap: var(--spacing-5);
      flex-direction: column;
      height: auto;
    }

    .menu-button {
      display: block;
    }
  }

  @media screen and (max-width: 479px) {
    .navbar {
      height: 60px;
    }
    
    .container.navbar-container {
      padding-left: var(--spacing-4);
      padding-right: var(--spacing-4);
    }

    .brand-image {
      max-width: 140px;
    }
  }
</style>
